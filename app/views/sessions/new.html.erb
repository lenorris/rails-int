<h1>Login</h1>

<%= form_tag session_path do %>
    <fieldset>
      
      <div class="clearfix">
        <label>Email:</label>
        <div class="input">
          <%= text_field_tag :email, params[:email]%>
        </div>
      </div>
      
      <div class="clearfix">
        <label>Password:</label>
        <div class="input">
          <%= text_field_tag :password %>
        </div>
      </div>
      
    </fieldset>
    
    <div class="actions">
      <%= submit_tag 'Login', class: 'btn-primary'%>
    </div>
<% end %>